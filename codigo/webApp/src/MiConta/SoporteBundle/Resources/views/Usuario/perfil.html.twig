{% extends '::base.html.twig' %}
{% block extraScripts %}
    <script src="{{asset('/plugins/datepicker/bootstrap-datepicker.js')}}"></script>
    <script src="{{asset('/plugins/datepicker/locales/bootstrap-datepicker.es.js')}}"></script>
    <script>
        $(function () {
            $('.datepicker').datepicker({
                format: "yyyy-mm-dd",
                language: "es",
                autoclose: true
            });
        });
    </script>
{% endblock %}
{% block extraCSS %}
    <link rel="stylesheet" href="{{asset('/plugins/datepicker/datepicker3.css')}}">
{%  endblock%}
{% block body %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Perfil del usuario "{{ usuario.username }}"</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form id="form" class="form-horizontal" method="POST" {{ form_enctype(form) }} action="{{ path('usuario_perfil') }}">
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(form.nombre, '', { 'label_attr' : { 'class' : 'col-md-3' } } ) }}
                    <div class="col-md-4">
                        {{form_widget(form.nombre)}}
                        <div class="help-block has-error">
                            {{ form_errors(form.nombre) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.apellido, '', { 'label_attr' : { 'class' : 'col-md-3' } } ) }}
                    <div class="col-md-4">
                        {{form_widget(form.apellido)}}
                        <div class="help-block has-error">
                            {{ form_errors(form.apellido) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.avatar, '', { 'label_attr' : { 'class' : 'col-md-3' } } ) }}
                    <div class="col-md-4">
                        {{form_widget(form.avatar)}}
                        <div class="help-block has-error">
                            {{ form_errors(form.avatar) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, '', { 'label_attr' : { 'class' : 'col-md-3' } } ) }}
                    <div class="col-md-4">
                        {{form_widget(form.email)}}
                        <div class="help-block has-error">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.direccion, '', { 'label_attr' : { 'class' : 'col-md-3' } } ) }}
                    <div class="col-md-4">
                        {{form_widget(form.direccion)}}
                        <div class="help-block has-error">
                            {{ form_errors(form.direccion) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.fecha_nacimiento, '', { 'label_attr' : { 'class' : 'col-md-3' } } ) }}
                    <div class="col-md-4">
                        {{form_widget(form.fecha_nacimiento)}}
                        <div class="help-block has-error">
                            {{ form_errors(form.fecha_nacimiento) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.clave.first, '', {'label_attr' : { 'class' : 'col-md-3' } }) }}
                    <div class="col-md-4">
                        {{ form_widget(form.clave.first) }}
                        <span class="help-block has-error">
                            {{ form_errors(form.clave.first) }}
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.clave.second, '', {'label_attr' : { 'class' : 'col-md-3' } }) }}
                    <div class="col-md-4">
                        {{ form_widget(form.clave.second) }}
                        <span class="help-block has-error">
                            {{ form_errors(form.clave.second) }}
                        </span>
                    </div>
                </div>
                {{form_rest(form)}}
            </div><!-- /.box-body -->

            <div class="box-footer">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" style="visibility: collapse"/>
                    <a class="btn btn-success" href="javascript:{}" onclick="form.submit();
                            return true;"class="btn green">
                        <i class="fa fa-save"></i> Guardar
                    </a>
                </div>
            </div>
        </form>
    </div><!-- /.box -->
{% endblock %}
