    {% block list_filters %}
    <form class="form-horizontal" action="{{ path("Metapod_SoporteBundle_Usuario_filters") }}" method="post" {{ form_enctype(form) }} role="form">
        <div class='box-body'>
            <legend>Filtrar</legend>
        {{ form_errors(form) }}
